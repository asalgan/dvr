<section class="container">

  <div class="all-shows">
    <ul class="show-cards">
      <% @shows.each do |show| %>
        <li class="show col-md-4 col-md-offset-1" id="<%=show.id%>">
          <span class="show-title"><%= show.title %></span>
          <span class="show-channel">Channel <%= show.channel %></span>
          <span class="show-time"><%= show.start_time.strftime("%I:%M%P") %> -
          <%= show.end_time.strftime("%I:%M%P") %></span>
          <% if show.recording == false %>
            <div class="not-currently-recording">
              <%= form_for show, :url => show_record_path(:show_id => show.id), method: :post do |f| %>
                <%= f.select :box_id, Box.all.collect { |p| [ p.box_number, p.id ] }, :include_blank => true %>
                <%= f.submit "Record", class: "record-button" %>
              <% end %>
            </div>
          <% else %>
            <div class="currently-recording">
              Recording on Box #<%= show.box.box_number %>
              <%= link_to "Cancel", show_delete_record_path(:show_id => show.id), class: "cancel-record-button" %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

</section>