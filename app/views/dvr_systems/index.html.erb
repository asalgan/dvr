<section class="my-dvr-boxes container">
	<p><%= link_to "All shows", shows_url  %></p>
	<%= @box_1.box_number %>

	<% @box_1_shows.each do |show| %>
	<%= show.title %>
	<%= show.start_time.strftime("%I:%M%P")  %> - 
	<%= show.end_time.strftime("%I:%M%P")  %><br>
	<% end %>

	<%= @box_2.box_number %>
	
	<% @box_2_shows.each do |show| %>
	<%= show.title %>
	<%= show.start_time.strftime("%I:%M%P")  %> -
	<%= show.end_time.strftime("%I:%M%P") %>
	<% end %>
</section>
